import numpy as np
import matplotlib.pyplot as plt
import cv2 as cv

img_orig = cv.imread(r"C:\Users\Rusiru_fdo\Desktop\a1images\daisy.jpg", cv.IMREAD_COLOR)

mask = np.zeros(img_orig.shape[:2], np.uint8)
foreground_model = np.zeros((1, 65), np.float64)
background_model = np.zeros((1, 65), np.float64)

rect = (50, 50, img_orig.shape[1] - 100, img_orig.shape[0] - 100)  # width and height reduced by 100 to match proper rect

cv.grabCut(img_orig, mask, rect, background_model, foreground_model, 5, cv.GC_INIT_WITH_RECT)

new_mask = np.where((mask == 2) | (mask == 0), 0, 1).astype('uint8')

foreground_img = img_orig * new_mask[:, :, np.newaxis]
background_img = img_orig * (1 - new_mask[:, :, np.newaxis])

background_blurred_img = cv.GaussianBlur(background_img, (21, 21), 0)

enhanced_img = foreground_img + background_blurred_img

plt.figure(figsize=(20, 4))

plt.subplot(161)
plt.imshow(cv.cvtColor(img_orig, cv.COLOR_BGR2RGB))
plt.title('Original Image')
plt.axis('off')

plt.subplot(162)
plt.imshow(new_mask, cmap='gray')
plt.title('Segmentation Mask')
plt.axis('off')

plt.subplot(163)
plt.imshow(cv.cvtColor(foreground_img, cv.COLOR_BGR2RGB))
plt.title('Foreground Image')
plt.axis('off')

plt.subplot(164)
plt.imshow(cv.cvtColor(background_img, cv.COLOR_BGR2RGB))
plt.title('Background Image')
plt.axis('off')

plt.subplot(165)
plt.imshow(cv.cvtColor(img_orig, cv.COLOR_BGR2RGB))
plt.title('Original Image')
plt.axis('off')

plt.subplot(166)
plt.imshow(cv.cvtColor(enhanced_img, cv.COLOR_BGR2RGB))
plt.title('Enhanced Image')
plt.axis('off')

plt.show()
