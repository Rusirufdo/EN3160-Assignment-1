import cv2
import numpy as np
import matplotlib.pyplot as plt

# Read the image (grayscale)
img = cv2.imread('fig1b.png', cv2.IMREAD_GRAYSCALE)

# Define the transformation function
def intensity_transform(x):
    return np.clip(x, 0, 255)  # Replace with actual transformation logic if given

# Apply transformation
output = intensity_transform(img)

# Display
plt.subplot(1, 2, 1), plt.imshow(img, cmap='gray'), plt.title('Original')
plt.subplot(1, 2, 2), plt.imshow(output, cmap='gray'), plt.title('Transformed')
plt.show()
